rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own textures
    match /textures/{textureId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Allow public read access to published scenes, but only authenticated users can write
    match /publishedScenes/{sceneId} {
      allow read: if true; // Public can view published scenes
      allow create: if request.auth != null;
      allow update: if request.auth != null &&
        (request.auth.uid == resource.data.userId ||
         // Allow incrementing views without auth
         request.resource.data.keys().hasAll(['views', 'lastViewedAt']) &&
         request.resource.data.views == resource.data.views + 1);
      allow delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Allow any authenticated user to read/write other collections for now
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
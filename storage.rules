rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read/write their own textures
    match /textures/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read/write their own models
    match /models/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow users to read/write their own snapshots
    match /snapshots/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Default rule for other paths
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}